# Environment variables for production deployment

# Prisma / Database (Postgres)
# Example (Render Managed Postgres):
# DATABASE_URL=postgres://<user>:<password>@<host>:5432/<db>
# Example (Supabase Postgres):
# DATABASE_URL=postgres://<user>:<password>@db.<project-ref>.supabase.co:5432/postgres
DATABASE_URL=

# App server
PORT=3000
JWT_SECRET=change-me-in-production

# Supabase configuration (server-side, do NOT expose real secrets to client)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
SUPABASE_BUCKET=chat-media

# Optional admin bootstrap
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=strong-password
# ADMIN_NAME=Admin
# ADMIN_FORCE_RESET=false
JWT_SECRET=dev-secret-change-in-prod
PORT=3011

# Admin bootstrap (do NOT commit real credentials)
# Set these to auto-create/update an admin user on server startup.
# ADMIN_EMAIL and ADMIN_PASSWORD are required to enable bootstrap.
# ADMIN_FORCE_RESET=true will reset password if the user already exists.
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=Admin
ADMIN_FORCE_RESET=false
