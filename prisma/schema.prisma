// Prisma schema for chat message persistence

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        Int      @id @default(autoincrement())
  roomId    String
  from      String
  text      String
  createdAt DateTime @default(now())
}
